{
    "name": "atamanovys/differ",
    "description": "show difference between files",
    "authors": [
        {
            "name": "AtamanovYS",
            "email": "atamanov.ys@gmail.com"
        }
    ],
    "license": "MIT",
    "bin": ["bin/gendiff"],
    "require": {
        "php": ">=7.4.0",
        "docopt/docopt": "^1.0",
        "webmozart/path-util": "^2.3",
        "lstrojny/functional-php": "^1.17",
        "funct/funct": "^1.5",
        "symfony/yaml": "^5.2"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.5",
        "phpstan/phpstan": "^0.12.83",
        "phpunit/phpunit": "^9.5",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-strict-rules": "^0.12.9"
    },
    "autoload": {
        "files": [
            "src/Cli.php",
            "src/Differ.php",
            "src/Parsers.php",
            "src/Formatters.php",
            "src/Formatters/Stylish.php",
            "src/Formatters/Plain.php"
        ],
        "psr-4": {
            "Differ\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpcs": "phpcs",
        "phpstan": "phpstan analyse -c ./phpstan.neon",
        "test": "phpunit tests",
        "test-coverage": [
            "@putenv XDEBUG_MODE=coverage",
            "phpunit --coverage-clover build/logs/clover.xml tests"
        ]
    }
}
